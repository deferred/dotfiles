# ctrl + alt - j : yabai -m window --warp south
# ctrl + alt - k : yabai -m window --warp north
# ctrl + alt - h : yabai -m window --warp west
# ctrl + alt - l : yabai -m window --warp east

# application focus
# homerow
alt - a : ~/.config/skhd/focus-app.sh Firefox
alt - r : ~/.config/skhd/focus-app.sh Alacritty
alt - s : ~/.config/skhd/focus-app.sh Things
alt - t : yabai -m space --focus misc1  # no default app, focus space misc1
alt - d : ~/.config/skhd/focus-app.sh Telegram
alt - h : ~/.config/skhd/focus-app.sh Spark
alt - n : ~/.config/skhd/focus-app.sh Spotify
alt - e : yabai -m space --focus misc2  # no default app, focus space misc2

# upper row
alt - q : ~/.config/skhd/focus-app.sh Safari
alt - w : ~/.config/skhd/focus-app.sh PyCharm
alt - f : ~/.config/skhd/focus-app.sh "1Password"
alt - g : ~/.config/skhd/focus-app.sh Slack
alt - j : ~/.config/skhd/focus-app.sh "Microsoft Outlook"

# down row
alt - x : ~/.config/skhd/focus-app.sh GoLand
alt - c : ~/.config/skhd/focus-app.sh Obsidian
alt - b : ~/.config/skhd/focus-app.sh "Microsoft Teams"

