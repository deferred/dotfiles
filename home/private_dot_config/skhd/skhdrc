# change focus between spaces
# ctrl - left : yabai -m space --focus prev
# ctrl - right : yabai -m space --focus next

# ctrl - 1 : yabai -m space --focus 1
# ctrl - 2 : yabai -m space --focus 2
# ctrl - 3 : yabai -m space --focus 3
# ctrl - 4 : yabai -m space --focus 4
# ctrl - 5 : yabai -m space --focus 5
# ctrl - 6 : yabai -m space --focus 6
# ctrl - 7 : yabai -m space --focus 7
# ctrl - 8 : yabai -m space --focus 8
# ctrl - 9 : yabai -m space --focus 9
#
# jump between 2 most recent spaces
ctrl + alt - l : yabai -m space --focus recent

# change window focus within space (stack.next/prev fallback to directional for bsp)
ctrl + alt - n : yabai -m window --focus stack.next || yabai -m window --focus stack.first || yabai -m window --focus south
ctrl + alt - e : yabai -m window --focus stack.prev || yabai -m window --focus stack.last || yabai -m window --focus north
ctrl + alt - h : yabai -m window --focus west
ctrl + alt - i : yabai -m window --focus east

# change focus between external displays (left and right)
ctrl + alt - r : yabai -m display --focus west
ctrl + alt - d : yabai -m display --focus east

# swap windows
shift + alt - n : yabai -m window --swap south
shift + alt - e : yabai -m window --swap north
shift + alt - h : yabai -m window --swap west
shift + alt - i : yabai -m window --swap east

# rotate layout clockwise
shift + alt - c : yabai -m space --rotate 270

# flip along y-axis
shift + alt - y: yabai -m space --mirror y-axis

# flip along x-axis
shift + alt - x: yabai -m space --mirror x-axis

# toggle window float
shift + alt - t : yabai -m window --toggle float --grid 4:4:1:1:2:2

# zoom
shift + alt - z : yabai -m window --toggle zoom-fullscreen

# move window to display left and right
shift + alt - r : yabai -m window --display west; yabai -m display --focus west;
shift + alt - d : yabai -m window --display east; yabai -m display --focus east;

# move window to prev and next space
# shift + alt - p : yabai -m window --space prev;
# shift + alt - n : yabai -m window --space next;

# move window to space #
shift + alt - 1 : yabai -m window --space 1;
shift + alt - 2 : yabai -m window --space 2;
shift + alt - 3 : yabai -m window --space 3;
shift + alt - 4 : yabai -m window --space 4;
shift + alt - 5 : yabai -m window --space 5;
shift + alt - 6 : yabai -m window --space 6;
shift + alt - 7 : yabai -m window --space 7;
shift + alt - 8 : yabai -m window --space 8;
shift + alt - 9 : yabai -m window --space 9;

# move window and split
# ctrl + alt - j : yabai -m window --warp south
# ctrl + alt - k : yabai -m window --warp north
# ctrl + alt - h : yabai -m window --warp west
# ctrl + alt - l : yabai -m window --warp east

# application focus
# homerow
alt - a : yabai -m window --focus "$(yabai -m query --windows | jq -r '.[] | select(.app=="Firefox") | .id' | head -1)" 2>/dev/null
alt - r : yabai -m window --focus "$(yabai -m query --windows | jq -r '.[] | select(.app=="Alacritty") | .id' | head -1)" 2>/dev/null
alt - s : yabai -m window --focus "$(yabai -m query --windows | jq -r '.[] | select(.app=="Things") | .id' | head -1)" 2>/dev/null
alt - t : yabai -m space --focus misc1  # no default app, focus space misc1
alt - d : yabai -m window --focus "$(yabai -m query --windows | jq -r '.[] | select(.app=="Telegram") | .id' | head -1)" 2>/dev/null
alt - h : yabai -m window --focus "$(yabai -m query --windows | jq -r '.[] | select(.app=="Spark") | .id' | head -1)" 2>/dev/null
alt - n : yabai -m window --focus "$(yabai -m query --windows | jq -r '.[] | select(.app=="Spotify") | .id' | head -1)" 2>/dev/null
alt - e : yabai -m space --focus misc2  # no default app, focus space misc2

# upper row
alt - q : yabai -m window --focus "$(yabai -m query --windows | jq -r '.[] | select(.app=="Safari") | .id' | head -1)" 2>/dev/null
alt - w : yabai -m window --focus "$(yabai -m query --windows | jq -r '.[] | select(.app=="PyCharm") | .id' | head -1)" 2>/dev/null
alt - f : yabai -m window --focus "$(yabai -m query --windows | jq -r '.[] | select(.app=="1Password") | .id' | head -1)" 2>/dev/null
alt - g : yabai -m window --focus "$(yabai -m query --windows | jq -r '.[] | select(.app=="Slack") | .id' | head -1)" 2>/dev/null
alt - j : yabai -m window --focus "$(yabai -m query --windows | jq -r '.[] | select(.app=="Microsoft Outlook") | .id' | head -1)" 2>/dev/null

# down row
alt - x : yabai -m window --focus "$(yabai -m query --windows | jq -r '.[] | select(.app=="GoLand") | .id' | head -1)" 2>/dev/null
alt - c : yabai -m window --focus "$(yabai -m query --windows | jq -r '.[] | select(.app=="Obsidian") | .id' | head -1)" 2>/dev/null
alt - b : yabai -m window --focus "$(yabai -m query --windows | jq -r '.[] | select(.app=="Microsoft Teams") | .id' | head -1)" 2>/dev/null

