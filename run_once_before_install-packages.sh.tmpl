{{- if eq .chezmoi.os "darwin" -}}
#!/bin/bash

brew bundle --no-lock --file=/dev/stdin <<EOF
tap "homebrew/bundle"
tap "homebrew/cask"
tap 'homebrew/cask-fonts'
tap "homebrew/core"

brew "fzf"
brew "git"
brew "htop"
brew "httpie"
brew "iperf3"
brew "mas"
brew "midnight-commander"
brew "thefuck"
brew "tldr"
brew "wget"
brew "yq"

cask "iterm2"
cask "karabiner-elements"

cask "font-jetbrains-mono"
cask "font-meslo-lg-nerd-font"
EOF

$(brew --prefix)/opt/fzf/install --all
grep -q "eval $(thefuck --alias)" "${HOME}/.zshrc" || echo "eval $(thefuck --alias)" >> "${HOME}/.zshrc"
{{ end -}}
